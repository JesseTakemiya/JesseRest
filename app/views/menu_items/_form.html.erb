<%= form_with(model: menu_item) do |form| %>
<% if menu_item.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% menu_item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.text_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :category, class: label_class %>
          <%= form.text_field :category, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if menu_item.persisted? %>
<%= link_to "Cancel", menu_item, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", menu_items_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
